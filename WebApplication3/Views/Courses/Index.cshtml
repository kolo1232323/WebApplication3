@model WebApplication3.Models.BigViewModel

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Course name
        </th>
        <th>
            Course description
        </th>
        <th>
            Instructor name
        </th>
        <th>
            Course date
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.Courses) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.CourseName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.CourseDescription)
    </td>
    <th>
        @{
            var user = Model.Users.First(x => x.Id == item.InstructorId);
        } 
        @Html.DisplayFor(modelItem => user.FullName)
    </th>
    <td>
        @Html.DisplayFor(modelItem => item.CourseDate)
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
    </td>
</tr>
}

</table>
